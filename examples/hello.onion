// 简单的Hello World示例
@required stdlib;

main := () -> {
    stdlib.io.println("Hello, Onion World!");
    stdlib.io.println("这是一个简单的Onion语言示例");
    
    // 基本算术
    a := 10;
    b := 20;
    result := a + b;
    stdlib.io.println("10 + 20 =", result);
    
    // 函数定义和调用
    square := (x?) -> x * x;
    stdlib.io.println("5的平方是:", square(5));
    
    return "程序执行完成";
};

main();
